<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gui_f.view.noctua.Activity.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:background="@color/backgroundColour">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Welcome"
        android:textColor="@color/textColour"
        android:textSize="14pt"
        />

    <ImageView
        android:src="@mipmap/ic_logo_com_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/User"
        android:gravity="center_horizontal"
        android:textColor="@color/textColour"
        android:textSize="10pt"
        />


    <EditText
        android:id="@+id/editUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/UserExmp"
        android:gravity="left"
        android:layout_margin="20dp"
        android:textSize="10pt"
        android:textColor="@color/textColour"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progressBar"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="0.5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Password"
        android:textSize="10pt"
        android:textColor="@color/textColour"
        />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_margin="20dp"
        android:gravity="left"
        android:hint="************"
        android:textSize="10pt"
        android:textColor="@color/textColour"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/Login"
            android:textSize="10pt"
            android:background="@drawable/button_shape" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textForgotPwdLoginScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ForgotPwd"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:textSize="10pt"
            android:textColor="@color/textColour" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"/>

        <TextView
            android:id="@+id/textNewUserLoginScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NewUser"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:textSize="10pt"
            android:textColor="@color/textColour"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="0.5"/>

</LinearLayout>
